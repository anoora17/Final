          {{#each products}}
              {{#each this}}
                    <div class="col-md-4 col-sm-6">
                    <form action="/customer/addTOcart" method="post">
                            <div class="sc-product-item thumbnail">
                              <img data-name="product_image" class="clipped-image" src="{{this.imagepath}}" alt="cupcake">
                              <div class="caption">
                              <h4 data-name="product_name">{{this.name}}</h4>   
