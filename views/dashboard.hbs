                              <option value= '12'> 12</option>
                              <option value= '24'> 24</option>
                              </select>
                          </div>

                          <div class="checkbox">
                            <label>
                            <input type="checkbox" name="gift_wrap" value="1"> Gift wrap
                            </label>
                        </div>
                        <strong class="price pull-left">${{this.price}}</strong>

                    <input name="product_price" value="{{this.price}}" type="hidden" />
                    <input name="product_id"    value="{{this.id}}"    type="hidden" />
                     <input name="product_name" value="{{this.name}}" type="hidden" />
                    <button type="submit"  class="sc-add-to-cart btn btn-success btn-sm pull-right" roll ="button">Add to cart</a>
                    </div>
                      <div class="clearfix"></div>
                      </div>
                    </div>
                    </form>
                </div>
            {{/each}}
